<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="120dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/recycler_view_item_image_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/recycler_view_item_filter_text_view1"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_gravity="left|top"/>

        <ImageButton
            android:id="@+id/recycler_view_item_check_image_button1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right|top"
            android:background="@drawable/rounded_corner_check_box_shape"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/check_box_empty_selector"
            android:visibility="gone"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/recycler_view_item_image_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/recycler_view_item_filter_text_view2"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_gravity="left|top"/>

        <ImageButton
            android:id="@+id/recycler_view_item_check_image_button2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right|top"
            android:background="@drawable/rounded_corner_check_box_shape"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/check_box_empty_selector"
            android:visibility="gone"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/recycler_view_item_image_view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/recycler_view_item_filter_text_view3"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_gravity="left|top"/>

        <ImageButton
            android:id="@+id/recycler_view_item_check_image_button3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right|top"
            android:background="@drawable/rounded_corner_check_box_shape"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/check_box_empty_selector"
            android:visibility="gone"/>

    </FrameLayout>
</LinearLayout>